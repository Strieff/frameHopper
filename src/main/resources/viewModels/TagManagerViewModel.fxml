<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="tagManagerView" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.FrameHopper.app.View.FXViews.TagManager.TagManagerController">

    <!-- Top toolbar with buttons -->
    <top>
        <ToolBar>
            <Button fx:id="addCodeButton" onAction="#openTagCreation" text="Add Code" />
            <Button fx:id="addCodesButton" onAction="#loadTags" text="Add Codes" />
            <Button fx:id="hideCodesButton" onAction="#hideTags" text="Hide Codes" />
            <Button fx:id="unhideCodesButton" onAction="#unhideTags" text="Unhide Codes" />
            <Button fx:id="deleteCodesButton" onAction="#deleteTags" text="Delete Codes" />
        </ToolBar>
    </top>

    <!-- Main TableView Area -->
    <center>
        <TableView fx:id="codeTable" editable="true" prefHeight="400">
            <columns>
                <TableColumn fx:id="codeColumn" prefWidth="150" text="CODE" />
                <TableColumn fx:id="valueColumn" prefWidth="100" text="VALUE" />
                <TableColumn fx:id="descriptionColumn" prefWidth="200" text="DESCRIPTION" />
                <TableColumn fx:id="editColumn" maxWidth="50.0" minWidth="20.0" prefWidth="40.0" />
                <TableColumn fx:id="deleteColumn" maxWidth="50.0" prefWidth="40.0" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

</BorderPane>
