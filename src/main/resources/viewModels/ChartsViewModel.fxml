<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="chartsView" maxHeight="600.0" maxWidth="1200.0" prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.engineer.View.FXViews.Charts.ChartsController">
    <!-- Center: The Bar Chart -->
    <center>
        <StackPane fx:id="chartPane">
            <BarChart>
                <xAxis>
                    <CategoryAxis side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" side="LEFT" />
                </yAxis>
            </BarChart>
            <LineChart>
                <xAxis>
                    <CategoryAxis side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxisLine" side="LEFT" />
                </yAxis>
            </LineChart>
        </StackPane>
    </center>

    <!-- Left: Table for Video Selection -->
    <left>
        <VBox prefWidth="300" BorderPane.alignment="CENTER">
            <TableView fx:id="videoTable" prefHeight="603.0" prefWidth="300.0">
                <columns>
                    <!-- Checkbox Column -->
                    <TableColumn fx:id="selectColumn" maxWidth="40.0" minWidth="20.0" prefWidth="40.0">
                        <cellValueFactory>
                            <PropertyValueFactory property="selected" />
                        </cellValueFactory>
                    </TableColumn>
                    <!-- Name Column -->
                    <TableColumn fx:id="nameColumn" prefWidth="238.0" text="Video Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="videoName" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            </TableView>
        </VBox>
    </left>

    <!-- Right: Options for Y-axis and Mean -->
    <right>
        <VBox prefWidth="200" BorderPane.alignment="CENTER">
            <Label text="Y-Axis Options:" />
            <!-- ComboBox for Y-axis -->
            <ComboBox fx:id="yAxisOptions" promptText="Choose Y-axis option">
                <items>
                    <FXCollections fx:factory="observableArrayList" />
                </items>
            </ComboBox>

            <!-- Checkbox for showing/hiding mean -->
            <CheckBox fx:id="meanCheckbox" selected="true" text="Show Mean" />
            <CheckBox fx:id="colorMean" selected="true" text="Color above/below mean" />
             <HBox prefHeight="24.0" prefWidth="200.0">
                 <Label fx:id="tickLabel" prefHeight="25.0" prefWidth="60.0" text="Ticks:" />
                 <TextField fx:id="tickField" prefHeight="25.0" prefWidth="80.0" text="10">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></TextField>
             </HBox>
            <HBox prefHeight="24.0" prefWidth="200.0">
                <Label fx:id="separatorLabel" prefHeight="25.0" prefWidth="60.0" text="Separator:" />
                <TextField fx:id="separatorField" prefHeight="25.0" prefWidth="80.0" text="10">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin></TextField>
            </HBox>
            <Button fx:id="generateButton" text="Generate">
            <VBox.margin>
               <Insets bottom="5.0" />
            </VBox.margin></Button>

            <!-- Separator -->
            <Separator orientation="HORIZONTAL" />
            <HBox prefHeight="100.0" prefWidth="200.0">
                <children>

                    <!-- Action Buttons -->
                    <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0">
                        <Button fx:id="importButton" alignment="CENTER" contentDisplay="CENTER" text="Import">
                            <VBox.margin>
                                <Insets bottom="2.0" top="2.0"/>
                            </VBox.margin>
                        </Button>
                        <Button fx:id="exportButton" alignment="CENTER" contentDisplay="CENTER" text="Export">
                            <VBox.margin>
                                <Insets bottom="2.0" top="2.0"/>
                            </VBox.margin>
                        </Button>
                        <Button fx:id="clearButton" alignment="CENTER" contentDisplay="CENTER" text="Clear">
                            <VBox.margin>
                                <Insets bottom="2.0" top="2.0"/>
                            </VBox.margin>
                        </Button>
                        <Button fx:id="saveButton" alignment="CENTER" contentDisplay="CENTER" text="Save">
                            <VBox.margin>
                                <Insets bottom="2.0" top="2.0"/>
                            </VBox.margin>
                        </Button>
                  <padding>
                     <Insets bottom="5.0" top="5.0" />
                  </padding>
                  </VBox>
                </children>
            </HBox>
        </VBox>
    </right>
</BorderPane>
