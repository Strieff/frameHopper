<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="mainView" prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.FrameHopper.app.View.FXViews.MainView.MainViewController">

   <!-- Right panel with buttons and table -->
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="835.0" prefWidth="221.0" spacing="10" BorderPane.alignment="CENTER">
         <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="800.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <TableView fx:id="tableView" editable="true" prefHeight="807.0" prefWidth="212.0" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="nameColumn" prefWidth="100" text="NAME">
                     <cellValueFactory>
                        <PropertyValueFactory property="name" />
                     </cellValueFactory>
                  </TableColumn>

                  <TableColumn fx:id="valueColumn" prefWidth="100" text="VALUE">
                     <cellValueFactory>
                        <PropertyValueFactory property="name" />
                     </cellValueFactory>
                  </TableColumn>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </ScrollPane>
      </VBox>
   </right>
   <center>
      <VBox maxHeight="Infinity" maxWidth="Infinity" minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="frameInput" promptText="Enter frame number" />
            <Button fx:id="jumpButton" onAction="#onJumpToFrame" text="Jump to Frame" />
            <padding>
               <Insets bottom="4.0" top="4.0" />
            </padding>
         </HBox>

         <StackPane fx:id="framePane" maxHeight="Infinity" maxWidth="Infinity" minHeight="0.0" minWidth="0.0" VBox.vgrow="ALWAYS">
            <ImageView fx:id="frameView" preserveRatio="true" />
            <Label fx:id="dropLabel" mouseTransparent="true" style="-fx-font-size: 24; -fx-font-weight: bold;" text="DROP HERE!" />
         </StackPane>

         <Label fx:id="statusLabel" alignment="CENTER" contentDisplay="TOP" maxWidth="Infinity" prefHeight="60.0" prefWidth="974.0" text="Current Frame: 0 / 0 | Frame Rate: 0.000000 fps">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
      </VBox>
   </center>
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <Button onAction="#onAdd">
            <graphic>
               <ImageView fx:id="addButtonIcon" fitHeight="32.0" fitWidth="32.0" />
            </graphic>
         </Button>

         <Button onAction="#onManager">
            <graphic>
               <ImageView fx:id="tagManagerIcon" fitHeight="32.0" fitWidth="32.0" />
            </graphic>
         </Button>

         <Button onAction="#onSettings">
            <graphic>
               <ImageView fx:id="settingsButtonIcon" fitHeight="32.0" fitWidth="32.0" />
            </graphic>
         </Button>

         <Button onAction="#onVideoList">
            <graphic>
               <ImageView fx:id="videoListButtonIcon" fitHeight="32.0" fitWidth="32.0" />
            </graphic>
         </Button>

         <Button onAction="#onChart">
            <graphic>
               <ImageView fx:id="chartButtonIcon" fitHeight="32.0" fitWidth="32.0" />
            </graphic>
         </Button>

         <Button onAction="#onExport">
            <graphic>
               <ImageView fx:id="exportButtonIcon" fitHeight="32.0" fitWidth="32.0" />
            </graphic>
         </Button>

         <Button onAction="#onNotes">
            <graphic>
               <ImageView fx:id="notesButtonIcon" fitHeight="32.0" fitWidth="32.0" />
            </graphic>
         </Button>
      </ToolBar>
   </top>
</BorderPane>
