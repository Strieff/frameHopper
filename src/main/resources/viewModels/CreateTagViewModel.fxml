<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="320.0" prefWidth="380.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.FrameHopper.app.View.FXViews.CreateTag.CreateTagController">

    <top>
        <VBox spacing="8.0" style="-fx-padding: 10;">
            <HBox spacing="10.0">

                <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label fx:id="nameLabel" minWidth="50.0" prefHeight="17.0" prefWidth="100.0" text="NAME:" />
                    <TextField fx:id="nameField" HBox.hgrow="ALWAYS" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label fx:id="valueLabel" minWidth="50.0" prefWidth="100.0" text="VALUE:" />

                    <TextField fx:id="valueField" HBox.hgrow="ALWAYS" />
                </HBox>


            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="8.0" style="-fx-padding: 10;">
            <Label fx:id="descriptionLabel" text="Description:" />
            <TextArea fx:id="descriptionArea" style="-fx-font-size: 14;" wrapText="true" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 10;">
            <Button fx:id="cancelButton" prefWidth="175.0" text="Cancel" />
            <Button fx:id="saveButton" prefWidth="175.0" text="Save" />
        </HBox>
    </bottom>

</BorderPane>
