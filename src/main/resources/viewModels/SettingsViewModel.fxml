<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="settingsView" prefHeight="222.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.FrameHopper.app.View.FXViews.Settings.SettingsController">
   <center>
        <VBox alignment="TOP_CENTER" prefHeight="223.0" prefWidth="300.0" spacing="10" BorderPane.alignment="CENTER">
            <!-- Language ComboBox at the top -->
            <VBox alignment="CENTER" spacing="5">
                <ComboBox fx:id="languageBox" prefHeight="25.0" prefWidth="130.0" promptText="English" />
            <padding>
               <Insets bottom="10.0" top="10.0" />
            </padding>
            </VBox>

            <!-- Checkboxes for options -->
            <VBox spacing="10"> <!-- Adds padding from the top -->
                <CheckBox fx:id="showHiddenTagsCheckBox" text="Show hidden tags" wrapText="true" />
                <CheckBox fx:id="openRecentCheckBox" text="Open recent" wrapText="true" />
                <CheckBox fx:id="languageExportCheckBox" text="Use chosen language for export" wrapText="true" />
                <CheckBox fx:id="settingsWarningCheckbox" text="Show warning for code management" wrapText="true" />
            <opaqueInsets>
               <Insets left="10.0" right="10.0" />
            </opaqueInsets>
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding>
            </VBox>
            <Button fx:id="manageButton" alignment="BASELINE_LEFT" onAction="#onManage" text="Manage files" />
        </VBox>
   </center>

</BorderPane>
